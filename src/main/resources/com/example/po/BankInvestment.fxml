<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.po.SceneController">
    <children>
        <Button fx:id="InvestmentButton"  layoutX="165" layoutY="290" mnemonicParsing="false" onAction="#investment" text="Make an investment" />
        <Button fx:id="CloseInvestButton" layoutX="315" layoutY="290" mnemonicParsing="false" onAction="#close"      text="Close an investment" />
        <Button fx:id="BackToCounters" layoutX="272" layoutY="340" mnemonicParsing="false" onAction="#switchToCounters" text="Go back" />
        <TextField editable="false"    layoutX="37"  layoutY="100" prefHeight="40" prefWidth="276" text="You're making 5% investment. Enter the amount:" />
        <TextField editable="false"    layoutX="340" layoutY="100" prefHeight="40" prefWidth="170" text="Enter the number of months:" />
        <TextField editable="false"    layoutX="240" layoutY="190" prefHeight="40" prefWidth="120"  text="Your investment is:" />

        <TextField fx:id="InvestmentArea"     layoutX="100" layoutY="155" prefHeight="20" prefWidth="150"/>
        <TextField fx:id="InvestmentDuration" layoutX="350" layoutY="155" prefHeight="20" prefWidth="150"/>
        <TextField fx:id="InvestmentAmount"   layoutX="225" layoutY="245" prefHeight="20" prefWidth="150" editable="false" />

        <TextField editable="false"         layoutX="170" layoutY="10"  prefHeight="40" prefWidth="260"  text="You currently have this much on your account:" />
        <TextField fx:id="CurrentMoneyArea" layoutX="225" layoutY="65"  prefHeight="20" prefWidth="150" editable="false"/>
    </children>
</AnchorPane>
