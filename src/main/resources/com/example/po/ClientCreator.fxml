<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.po.SceneController">
   <children>
      <Button fx:id="clientAddButton"     layoutX="200.0" layoutY="310.0" mnemonicParsing="false" onAction="#addClient" text="Add" />
      <Button fx:id="clientDiscardButton" layoutX="327.0" layoutY="310.0" mnemonicParsing="false" text="Cancel" onAction="#switchToAccounts" />

      <TextField fx:id="nameTextField"           layoutX="410.0" layoutY="60.0"  prefWidth="150.0"/>
      <TextField fx:id="surnameTextField"        layoutX="410.0" layoutY="110.0" prefWidth="150.0"/>
      <TextField fx:id="peselTextField"          layoutX="410.0" layoutY="160.0" prefWidth="150.0"/>
      <TextField fx:id="persBelongsTextField"    layoutX="410.0" layoutY="210.0" prefWidth="150.0"/>
      <TextField fx:id="monthlyIncomeTextArea"   layoutX="410.0" layoutY="260.0" prefWidth="150.0"/>
      <TextField fx:id="characterComboBox"       layoutX="410.0" layoutY="310.0" prefWidth="150.0"/>

      <TextField editable="false" layoutX="30.0" layoutY="60.0"  prefWidth="150.0" text="Name" />
      <TextField editable="false" layoutX="30.0" layoutY="110.0" prefWidth="150.0" text="Surname" />
      <TextField editable="false" layoutX="30.0" layoutY="160.0" prefWidth="150.0"  text="Pesel" />
      <TextField editable="false" layoutX="30.0" layoutY="210.0" prefWidth="150.0"  text="Personal belongings" />
      <TextField editable="false" layoutX="30.0" layoutY="260.0" prefWidth="150.0"  text="Monthly income" />
      <TextField editable="false" layoutX="30.0" layoutY="310.0" prefWidth="150.0"  text="Personality" />

      <TextField editable="false" layoutX="200.0" layoutY="20.0"  prefWidth="180.0"  text="Here you can add a new client:" />

      <TextArea fx:id="addClientTextArea" editable="false" layoutX="200.0" layoutY="60.0" prefHeight="220.0" prefWidth="180.0" />


   </children>
</AnchorPane>
